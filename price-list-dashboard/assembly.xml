<assembly>
    <id>assembly</id>
    <formats>
        <format>tar.gz</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
    <fileSets>
        <fileSet>
            <directory>target/classes/data</directory>
            <outputDirectory>data</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>target/classes/static</directory>
            <outputDirectory>conf/static</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>target/classes/templates</directory>
            <outputDirectory>conf/templates</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>../bin</directory>
            <outputDirectory>bin</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>target/lib/</directory>
            <outputDirectory>lib</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>template</directory>
            <outputDirectory>template</outputDirectory>
        </fileSet>
    </fileSets>
    <files>
        <file>
            <source>target/${project.artifactId}-${project.version}.jar</source>
            <outputDirectory>.</outputDirectory>
        </file>
        <file>
            <source>target/classes/log4j2.xml</source>
            <outputDirectory>conf</outputDirectory>
        </file>
        <file>
            <source>target/classes/application.yml</source>
            <outputDirectory>conf</outputDirectory>
        </file>
        <file>
            <source>target/classes/logo.ico</source>
            <outputDirectory>conf</outputDirectory>
        </file>
    </files>
</assembly>